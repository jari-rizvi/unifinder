<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/card_background"
    android:backgroundTint="@color/white"
    android:elevation="1dp"
    tools:layout_editor_absoluteX="18dp"
    tools:layout_editor_absoluteY="-2dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <TextView
            android:id="@+id/tv_title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Are you sure you want to add this card as default"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/okBtn"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginVertical="30dp"
            android:backgroundTint="@color/orange"
            android:gravity="center"
            android:maxLines="3"
            android:text="View"
            android:textAlignment="center"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cancelBtn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_text" />


        <TextView
            android:id="@+id/Movebtn"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginVertical="30dp"
            android:backgroundTint="@color/orange"
            android:gravity="center"
            android:maxLines="3"
            android:text="Cancel"
            android:textAlignment="center"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@+id/cancelBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/cancelBtn"
            app:layout_constraintTop_toTopOf="@+id/cancelBtn" />

        <TextView
            android:id="@+id/cancelBtn"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginVertical="30dp"
            android:gravity="center"
            android:maxLines="3"
            android:text="Delete"
            android:textAlignment="center"
            android:textColor="@color/orange"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@+id/okBtn"
            app:layout_constraintEnd_toStartOf="@+id/Movebtn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/okBtn"
            app:layout_constraintTop_toTopOf="@+id/okBtn" />


    </androidx.constraintlayout.widget.ConstraintLayout>
 