<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_80sdp"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/_3sdp"
    android:layout_marginEnd="@dimen/_3sdp"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/txtitemName"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faux Sued Ankle Boots"
        android:textColor="#404040"
        android:textSize="@dimen/_13ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDescription"

        android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtitemName"
            app:layout_constraintHorizontal_bias="0"
            android:maxLines="2"
            android:textSize="@dimen/_13ssp"
            android:ellipsize="end"
            android:text="7, Hot Pink7, Hot Pink7, Hot PinkHot Pink7, Hot Pink"
            app:layout_constraintBottom_toTopOf="@+id/txtItemQuantity"
            app:layout_constraintEnd_toStartOf="@+id/btnReview"
            app:layout_constraintStart_toStartOf="@+id/txtitemName"
            app:layout_constraintTop_toBottomOf="@+id/txtitemName" />

        <TextView
            android:id="@+id/txtItemQuantity"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtDescription"
            android:text="1"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txtDescription"
            app:layout_constraintTop_toBottomOf="@+id/txtDescription" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_below="@id/txtItemQuantity"
            android:alpha="0.1"
            app:layout_constraintTop_toBottomOf="@+id/txtItemQuantity"

            app:layout_constraintBottom_toBottomOf="parent" />


        <TextView
            android:id="@+id/btnReview"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0.95"
            android:textStyle="bold"
            android:text="Review"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintBottom_toBottomOf="@+id/txtDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>
